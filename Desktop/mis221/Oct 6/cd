}

static void PrintAllBooks(string[] titles, int count)
{
	for (int i = 0; i < count; i++; )
	{
		System.Console.WriteLine (titles[i]);
	}
}

static void Sort(string[] titles, int count)
{
	for(int i = 0; i < count -1; i++)
	{
		int min = i; // assume i is th esmall
		for(int j = i+1; j < count; j++ )
		{
			if(titles[min].CompareTo(titles[j]) > 0)
			{
				min = j;
			}
		}
		if (min !=i)
		{
			swap(titles,min,i);
		}
	}
}
static void swap(string[] titles, int x, int y)
{
	string temp = values[x];
	values[x] = values[y];
	values[y] = temp;
}
static int FindBook(string[] titles, int count)
{
	for (int i = 0; i < count; i++)
	{
		if(searhVal.ToUpper() == titles[i].ToUpper())
		{
			return i; //index of matching title
		}
	}
	return -1; //send back -1 if no book is found
}